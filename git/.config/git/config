[credential]
    # Clear any credential helpers inherited from system/global configs (e.g. Homebrew osxkeychain).
    # This prevents multiple helpers from stacking and causing confusing prompts.
    helper =

    # Use Git Credential Manager (GCM) if installed. Good for GitHub/GitLab/Azure DevOps auth flows.
    helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
    # Azure DevOps can require different creds per org/project URL path.
    useHttpPath = true

[core]
	editor = code --wait
	autocrlf = input
	fileMode = false
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
	syntax-theme = Catppuccin Macchiato

[color]
    # Enable colors when supported.
    ui = auto

[init]
    # New repositories default to "main".
    defaultBranch = main

[pull]
    # Avoid merge commits on pull; rebase local commits on top of fetched branch.
    rebase = true

[rebase]
    # If you pull/rebase with local changes, stash automatically and restore after.
    autoStash = true

[fetch]
    # Remove remote-tracking branches that were deleted on the remote.
    prune = true

[push]
    # Automatically set upstream when pushing a new branch for the first time.
    autoSetupRemote = true

    # Safer default: only push the current branch to its upstream.
    default = simple

[diff]
    # Often produces nicer diffs for code.
    algorithm = histogram
    colorMoved = default

[merge]
    # Show more useful conflict context (especially when rebasing).
    conflictstyle = zdiff3

[rerere]
    # Reuse recorded resolution: Git remembers how you fixed a conflict and can reapply it later.
    enabled = true